:local
  .document
    display flex
    box-sizing border-box
    width 100%
    min-width 480px
    height 100%
    min-height 300px
    border-top 1px solid #B8B8B8
  .sidebar-selector
    width 240px
    box-sizing border-box
    flex none
    border-right 1px solid #B8B8B8
  .main
    position relative
    flex 1
    overflow auto
    background #f2f2f2
  .sidebar-info
    width 240px
    box-sizing border-box
    flex none
    border-left 1px solid #B8B8B8

  .treeview-item
    display flex
    align-items center
    cursor default
    white-space nowrap
    &:global(.even)
      background #f0f0f0

    &.artboard
      background #f9f9f9
      box-shadow inset 0 -0.5px 0 0 #B8B8B8, inset 0 0.5px 0 0 #B8B8B8
    &:global(.hover), &:hover
      box-sizing border-box
      box-shadow inset 0 0 0 2px #44c1ff
    &:global(.selected)
      color white
      background #6e9ee1
      .icon
        fill white
        color white
      .icon-expand
        &::after
          border-top-color white

  .icon
    margin-left 8px
    flex none
    fill #a6a6a6
    color #a6a6a6
    width 16px
    height 16px
    line-height 16px
    text-align center
    user-select none
    &.icon-symbol
      fill #8f44b7
    &.icon-expand
      width 12px
      height 16px
      margin-left 6px
    &.icon-mask
      transform rotate(90deg)
      width 10px
      margin-right -4px
      color #4e4e4e
  .icon-expand
    box-sizing border-box
    padding 6px 0 4px
    &::after
      content ''
      display block
      width 12px
      height 6px
      box-sizing border-box
      border-width 6px 6px 0
      border-color #a6a6a6 rgba(0, 0, 0, 0)
      border-style solid
  .frame
    box-sizing border-box
    position absolute
    pointer-events none
  .frame-hovered
    composes frame
    border 2px solid #44c0ff
  .frame-selected
    composes frame
    border 1px solid #fa571f
  .frame-expand
    composes frame
    border 1px dotted #fa571f
  .frame-note
    composes frame
    font-size 12px
    line-height 16px
    color #fa571f
    background rgba(248, 248, 248, 0.85)
    border-radius 2px
    padding 0 4px
    transform translate(-50%, -50%)