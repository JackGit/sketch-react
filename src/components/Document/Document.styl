:local
  .document
    display flex
    box-sizing border-box
    width 100%
    min-width 480px
    height 100%
    min-height 300px
    border-top 1px solid #B8B8B8
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  .document-error
    composes document
    background #f2f2f2
    color #777
    font-size 16px
    line-height 1.6
    text-align center
    display block
    h1
      max-width 480px
      margin 64px auto 0
      text-align center
      font-size 18px
      font-weight bold
    p
      max-width 480px
      margin 16px auto
    a
      text-align none
      color #3884ff

  .document-loading
    composes document
    composes: global(spin)
    background #f2f2f2
    align-items center
    justify-content center

  .sidebar-selector
    width 240px
    height 100%
    box-sizing border-box
    flex none
    border-right 1px solid #B8B8B8
  .main
    position relative
    flex 1
    overflow auto
    height 100%
    background #f2f2f2
  .canvas
    position relative
    min-width 100%
    min-height 100%
  .sidebar-info
    width 240px
    box-sizing border-box
    flex none
    height 100%
    border-left 1px solid #B8B8B8

  .treeview-item
    display flex
    align-items center
    cursor default
    padding-right 8px
    &:global(.even)
      background #f0f0f0
    &.artboard
      background #f9f9f9
      box-shadow inset 0 -0.5px 0 0 #B8B8B8, inset 0 0.5px 0 0 #B8B8B8
    &:global(.hover), &:hover
      box-sizing border-box
      box-shadow inset 0 0 0 2px #44c1ff
    &:global(.hidden)
      color #929292
    &:global(.selected)
      color white
      background #6e9ee1
      .icon
        fill white
        color white
      .icon-expand
        &::after
          border-top-color white
    .text
      flex 1
      margin-left 8px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
  .icon
    margin-left 8px
    flex none
    fill #a6a6a6
    color #a6a6a6
    width 16px
    height 16px
    line-height 16px
    text-align center
    user-select none
    &.icon-symbol
      fill #8f44b7
    &.icon-expand
      width 12px
      height 16px
      margin-left 6px
    &.icon-mask
      transform rotate(90deg)
      width 10px
      margin-right -4px
      color #4e4e4e
  .icon-expand
    box-sizing border-box
    padding 6px 0 4px
    &::after
      content ''
      display block
      width 12px
      height 6px
      box-sizing border-box
      border-width 6px 6px 0
      border-color #a6a6a6 rgba(0, 0, 0, 0)
      border-style solid
  .frame
    box-sizing border-box
    position absolute
    pointer-events none
  .frame-hovered
    composes frame
    border 2px solid #44c0ff
  .frame-selected
    composes frame
    border 1px solid #fa571f
  .frame-expand
    composes frame
    border 1px dotted #fa571f
  .frame-note
    composes frame
    font-size 12px
    line-height 16px
    color #fa571f
    background rgba(248, 248, 248, 0.85)
    border-radius 2px
    padding 0 4px
    transform translate(-50%, -50%)

  .info
    background #f2f2f2
    height 100%
    overflow auto
    .empty
      font-size 16px
      color #999
      text-align center
      padding 14px
    .section-header
      color #666
      font-weight bold
      padding-left 8px
      font-size 12px
      line-height 27px
      background #f9f9f9
      box-shadow inset 0 -0.5px 0 0 #B8B8B8, inset 0 0.5px 0 0 #B8B8B8
    .previewer
      margin 16px
      background url(./bg.png)
      background-color white
      background-size 8px
    .code
      margin 16px
      background white
      white-space inherit
      padding 8px;
      font-family: monospace;
      color: #666;

.spin
  &::before
    content ''
    display block
    width 32px
    height 32px
    border-radius 50%
    border-color #3884ff #3884ff transparent transparent
    border-style solid
    border-width 4px
    animation .5s linear 0s infinite normal none running rotate

@keyframes rotate {
  from {
    transform: rotate(0)
  }

  to {
    transform: rotate(360deg)
  }
}